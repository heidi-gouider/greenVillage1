										<a href="{{ path('commande_ajout', {id: element.produit.id }) }}" class="btn btn-success">+</a>
										<a href="{{ path('commande_supprimer', {id: element.produit.id }) }}" class="btn btn-secondary">Suppr</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">La commande est vide</td>
								</tr>
							{% endfor %}
						</tbody>
						<tfoot>
							<tr>
