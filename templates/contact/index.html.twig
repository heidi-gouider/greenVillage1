{% extends 'base.html.twig' %}

{% block title %}Velvet
{% endblock %}

{% block body %}
<div class="contenu">

	<div class="container mx-auto text-white mt-5" id="formulaire">
		<h2 class="fst-italic text-white text-center">Nous contacter</h2>

		<div class="row text-center justify-content-center">
			<div class="col-md-6">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
				<div class="my-custom-class-for-errors">
					{{ form_errors(form) }}
				</div>

				{# <div class="row"> #}
				<div class="col-9 mx-auto mb-2 mt-4">
					{{ form_row(form.objet) }}
				</div>
				<div class="col-9 mx-auto mb-2">
					{{ form_row(form.email) }}
				</div>
				<div class="col-9 mx-auto mb-2">
					{{ form_row(form.message) }}
				</div>
				 {{ form_end(form) }} </div> 
			</div>
		</div> 
	</div> 
</div> 

{# {% include "partials/footer.php" %}  #}
{% endblock %}

