		<div class="row text-center">


    {{ form_start(form) }}
    			<div class="row">
				<div class="col-9 mx-auto mb-2 mt-4">
        {{ form_row(form.categorie) }}
                </div>
				<div class="col-9 mx-auto mb-2 mt-4">
        {{ form_row(form.query) }}
        <button type="submit text-white">Rechercher <i class="bi bi-question-lg"></i></button>
                        </div>
                </div>

    {{ form_end(form) }}
        </div>
    </div>

    <h2>Résultats</h2>
    {% if produits is not empty %}
        <ul>
        {% for produit in produits %}
            <li>{{ produit.libelleProduit }}</li>
        {% endfor %}
        </ul>
    {% else %}
        <p>Aucun produit trouvé.</p>
</div>

